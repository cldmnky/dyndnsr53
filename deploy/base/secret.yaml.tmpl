apiVersion: v1
kind: Secret
metadata:
  name: dyndnsr53-secret
  labels:
    app: dyndnsr53
type: Opaque
data:
  # AWS Configuration (base64 encoded)
  # To encode: echo -n "your-value" | base64
  aws-region: _AWS_REGION
  aws-access-key-id: _AWS_ACCESS_KEY
  aws-secret-access-key: _AWS_SECRET_ACCESS_KEY
  
  # Route53 Configuration
  zone-id: _AWS_R53_ZONE_ID
  
  # Optional: DynDNS Authentication (if using authentication)
  # auth-username: dXNlcm5hbWU=  # username (base64)
  # auth-password: cGFzc3dvcmQ=  # password (base64)

---
# Optional: ServiceAccount for enhanced security
apiVersion: v1
kind: ServiceAccount
metadata:
  name: dyndnsr53
  labels:
    app: dyndnsr53
automountServiceAccountToken: false